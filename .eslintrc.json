{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "globals": {
    "fetch": false
  },
  "env": {
    "jest": true
  },
  "rules": {
    "comma-dangle": "off",
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "quotes": "off",
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "global-require": "off",
    "react/prop-types": [
      1,
      {
        "ignore": [ 
          "navigator",
          "navigation",
          "style",
          "styles",
          "route"
        ]
      }
    ],
    "class-methods-use-this": [1],
    "react/jsx-boolean-value": 1,
    "no-console": 0
  }
}
